Pod::Spec.new do |s|
  s.name             = 'ffmpeg-kit-https'
  s.version          = '1.0'
  s.summary          = 'FFmpeg Kit iOS Https Shared Framework'
  s.description      = 'Includes FFmpeg with gmp and gnutls libraries enabled.'
  s.homepage         = 'https://github.com/voyageh/ffmpeg-kit'
  s.authors          = { 'ARTHENICA' => 'open-source@arthenica.com' }
  s.license          = { :type => 'LGPL-3.0', :file => 'ffmpegkit.xcframework/ios-arm64/ffmpegkit.framework/LICENSE' }
  s.platform         = :ios, '12.1'
  s.requires_arc     = true

  s.libraries        = 'z', 'bz2', 'c++', 'iconv'

  s.source           = { :http => 'https://github.com/voyageh/ffmpeg-kit/releases/download/v6.0/ffmpeg-kit-https-6.0-ios-xcframework.zip' }

  s.ios.frameworks   = 'AudioToolbox', 'AVFoundation', 'CoreMedia', 'VideoToolbox'

  s.vendored_frameworks = 'ffmpegkit.xcframework', 'libavcodec.xcframework', 'libavdevice.xcframework', 'libavfilter.xcframework', 'libavformat.xcframework', 'libavutil.xcframework', 'libswresample.xcframework', 'libswscale.xcframework'

end
